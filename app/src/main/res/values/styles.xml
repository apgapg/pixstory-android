<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>

        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>

    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="smallCaseButton">
        <item name="android:textAllCaps">false</item>
    </style>
    <!--Common button style for all buttons-->
    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <!--?attr/selectableItemBackgroundBorderless-->
    <!--Common style for all textviews-->
    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!--set lines for textview-->
    <style name="textViewStyle.line_1">
        <item name="android:lines">1</item>
    </style>

    <style name="textView.explore_cards" parent="android:Widget.TextView">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12dp</item>


    </style>
    <!--Toolbar textSize-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_small_medium</item>
    </style>
    <!--Size of text on tabs-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small_medium</item>
    </style>

