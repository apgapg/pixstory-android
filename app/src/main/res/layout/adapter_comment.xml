<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCmntUserName"
                style="@style/textViewStyle.line_1"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="Suketu Balaji" />

            <TextView
                android:id="@+id/tvCmntTime"
                style="@style/textViewStyle.line_1"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/grey_light7"
                android:textSize="@dimen/text_size_small"
                tools:text="6 days ago" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvCmntStory"
            style="@style/textViewStyle"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:lines="3"
            android:textSize="@dimen/text_size_small"
            tools:text="The major attractions in Las Vegas are the casinos and the hotels, although in recent years other new attractions have begun to emerge Most casinos emerge casinos recent years other attract ...  " />
    </LinearLayout>

</LinearLayout>