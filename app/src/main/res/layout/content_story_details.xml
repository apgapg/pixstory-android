<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.storydetails.StoryDetailsActivity"
    tools:showIn="@layout/activity_story_details">

    <RelativeLayout
        android:id="@+id/rLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small_normal">

        <TextView
            android:id="@+id/tvYourTitle"
            style="@style/textViewStyle.line_1"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClose"
            style="@style/textViewStyle.line_1"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvYourTitle"
            android:gravity="end"
            android:text="@string/x"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rLayoutTitle"
        android:background="@color/grey_light" />

    <LinearLayout
        android:id="@+id/lLayoutUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLayoutTitle"
        android:baselineAligned="false"
        android:gravity="center"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLikeUserPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_very_tiny"
                android:background="@drawable/ripple_effect"
                android:contentDescription="@null"
                app:srcCompat="@drawable/user_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_very_tiny"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLikeName"
                    style="@style/textViewStyle.line_1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    tools:text="Ankit sharma" />

                <TextView
                    android:id="@+id/tvLikeUserName"
                    style="@style/textViewStyle.line_1"
                    android:ellipsize="end"
                    android:textColor="@color/grey_light4"
                    android:textSize="@dimen/text_size_small"
                    tools:text='"@rahulabrol2211"' />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tvLikeFollow"
                style="@style/textViewStyle.line_1"
                android:background="@drawable/button_border"
                android:padding="@dimen/padding_small"
                android:text="@string/follow"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lLayoutUserDetails"
        android:background="@color/grey_light" />

    <TextView
        android:id="@+id/tvStory"
        style="@style/textViewStyle"
        android:layout_below="@+id/lLayoutUserDetails"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:maxLines="20"
        android:padding="@dimen/padding_small"
        android:textSize="@dimen/text_size_small_medium"
        tools:text="Las Vegas, in Nevadaâ€™s Mojave Desert, is a resort city famed for its vibrant nightlife, centered around 24-hour casinos and other entertainment options. Its main street and focal point is the Strip, just over 4 miles long. This boulevard is home to themed hotels with elaborate displays such as fountains synchronized to music as well as replicas of an Egyptian pyramid, the Venetian Grand Canal, and the Eiffel Tower.
Las Vegas was settled in 1905 and officially incorporated in 1911. At the close of the 20th century, it was the most populated American city founded within that century (a similar distinction earned by Chicago in the 1800s). Population growth has accelerated since the 1960s, and between 1990 and 2000 the population nearly doubled, increasing by 85.2%. Rapid growth has continued into the 21st century.
" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/linearLayoutLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:padding="@dimen/padding_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect"
                    android:contentDescription="@null"
                    android:elevation="@dimen/margin_small"
                    app:srcCompat="@drawable/ic_favorite" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    style="@style/textViewStyle.line_1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:text="30 likes" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center_vertical|end">

                <ImageView
                    android:id="@+id/ivEditStory"
                    android:layout_width="@dimen/height_20"
                    android:layout_height="@dimen/height_20"
                    android:background="@drawable/ripple_effect"
                    android:contentDescription="@null"
                    android:elevation="@dimen/margin_small"
                    app:srcCompat="@drawable/more_vert" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small_normal"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small_normal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rLayoutHideComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewStyle.line_1"
                    android:text="@string/comment"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textViewStyle.line_1"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical|end"
                    android:text="@string/hide_all"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_small"
                android:minHeight="@dimen/view_pager_height"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/grey_light9"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_small_normal"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small_normal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_light9"
                    android:hint="@string/comment."
                    android:imeOptions="actionSend"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSeeAll"
                style="@style/textViewStyle.line_1"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:gravity="center_vertical|end"
                android:text="@string/see_all"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
