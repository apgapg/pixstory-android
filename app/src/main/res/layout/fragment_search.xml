<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <AutoCompleteTextView
        android:id="@+id/search_tag_field"
        android:layout_width="@dimen/search_bar_width"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_rectangle_grey"
        android:hint="Search for a tag..."
        android:lines="1"
        android:paddingLeft="8dp"

        android:paddingRight="8dp"
        android:textAppearance="@style/text_14.regular.primary" />


    <include layout="@layout/vertical_divider_light" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>