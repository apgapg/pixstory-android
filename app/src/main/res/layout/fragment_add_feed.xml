<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/dimens_250"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_tiny"
    android:minHeight="@dimen/dimens_150"
    card_view:cardCornerRadius="@dimen/corner_radius_10"
    card_view:cardElevation="@dimen/cardview_elevation_4">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dimens_250"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/dimens_150"
        android:orientation="vertical">

        <TextView
            style="@style/textViewStyle.line_1"
            android:padding="@dimen/padding_tiny"
            android:text="@string/no_story_posted_yet" />

        <TextView
            android:id="@+id/tvAddStory"
            style="@style/textViewStyle.line_1"
            android:background="@drawable/bg_round_dialog"
            android:backgroundTint="@color/colorAccent"
            android:drawableStart="@drawable/ic_edit"
            android:drawableTint="@color/white"
            android:padding="@dimen/padding_small"
            android:text="@string/add_story"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>