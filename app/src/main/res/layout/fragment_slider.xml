<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/dimens_250"
    style="@style/padding8"
    android:background="@drawable/gray_effect_without_border"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/border_right"
        android:paddingRight="@dimen/iconTextMargin"
        android:minHeight="@dimen/dimens_100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCmntUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12_medium_primaryText"
                    tools:text="Suketu Balaji" />

                <TextView
                    android:id="@+id/tvCmntTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12_light_gray"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:gravity="end"
                    tools:text="6 days ago" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCmntStory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/txt_12_regular_primaryText"
                android:layout_marginTop="@dimen/iconTextMargin"
                android:ellipsize="end"
                android:lines="5"
                tools:text="The major attractions in Las Vegas are the casinos and the hotels, although in recent years other new attractions have begun to emerge Most casinos emerge casinos recent years other attract ...  " />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/iconTextMargin"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCmntLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12_light_gray"
                    tools:text="3 likes" />

                <TextView
                    android:id="@+id/tvCmntComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12_light_gray"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toRightOf="@id/tvCmntLikes"
                    tools:text="6 Comments" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>