<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:paddingTop="24dp">


    <EditText
        android:id="@+id/search_tag_field"
        android:layout_width="170dp"

        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rectangle_grey"
        android:hint="Search for a tag..."
        android:lines="1"
        android:paddingLeft="8dp"

        android:paddingRight="8dp"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fresh_feeds"
                style="@style/textView.explore_cards"
                android:background="@drawable/shape_round_rectangle_red"
                android:text="The freshly cooked ones!" />

            <TextView
                android:id="@+id/popular_feeds"
                style="@style/textView.explore_cards"
                android:background="@drawable/shape_round_rectangle_yellow"
                android:text="The most popular ones!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fav_feeds"
                style="@style/textView.explore_cards"
                android:background="@drawable/shape_round_rectangle_green"
                android:text="Our all time favourites!" />

            <TextView
                android:id="@+id/weekly_feeds"
                style="@style/textView.explore_cards"
                android:background="@drawable/shape_round_rectangle_blue"
                android:text="The weekly trend setters!" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>