<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:paddingTop="24dp">


    <AutoCompleteTextView
        android:id="@+id/search_tag_field"
        android:layout_width="@dimen/search_bar_width"

        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rectangle_grey"
        android:hint="Search for a tag..."
        android:lines="1"
        android:paddingLeft="8dp"

        android:paddingRight="8dp"
        android:textAppearance="@style/text_14.regular.primary" />


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/fresh_feeds"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/shape_round_rectangle_red">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_room_service_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="36dp"
                    android:text="Freshly Cooked"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/popular_feeds"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/shape_round_rectangle_blue">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_grade_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="36dp"
                    android:text="Popular Ones"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/fav_feeds"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/shape_round_rectangle_green">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_build_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="36dp"
                    android:text="Coming Soon"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/weekly_feeds"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/shape_round_rectangle_yellow">


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_build_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="36dp"
                    android:text="Coming Soon"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>