<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:background="#fff"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">


        <TextView
            android:id="@+id/picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#424242"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textView.feed_secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="by" />


            <TextView
                android:id="@+id/user_name"
                style="@style/textView.feed_primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Username" />

        </LinearLayout>


        <TextView
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="WRITE A STORY"
            android:textColor="#424242"
            android:textSize="12dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"

            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="VIEW ALL STORIES"
            android:textColor="#424242"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/story_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"

                android:paddingTop="4dp"
                android:text="3 likes"

                android:textColor="#9e9e9e"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/story_comment_count"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="1 stories"

                android:textColor="#9e9e9e"
                android:textSize="12dp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>