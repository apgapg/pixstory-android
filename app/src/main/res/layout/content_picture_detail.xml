<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="#24bdbdbd" />

    <include layout="@layout/vertical_divider_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/pic_title"
            style="@style/textView.feed_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title" />

        <TextView
            android:id="@+id/pic_text_by"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"

            android:text="by" />

        <com.jullae.ui.custom.CircularImageView
            android:id="@+id/user_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="#99bdbdbd" />

        <TextView
            android:id="@+id/text_name"
            style="@style/textView.feed_primary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Username" />

        <TextView
            android:id="@+id/text_date"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:text="1 day ago" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pic_like_count"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:text="3 likes" />

        <TextView
            android:id="@+id/pic_comment_count"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="1 stories" />


        <TextView
            android:id="@+id/write_story"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:paddingRight="12dp"
            android:text="Write a story"
            android:textColor="#424242"
            android:textStyle="bold" />


    </LinearLayout>


    <include layout="@layout/vertical_divider_light" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" />

</LinearLayout>