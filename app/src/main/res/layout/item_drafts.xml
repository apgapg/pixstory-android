<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingRight="10dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="104dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/story_title"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingTop="4dp"
            android:text="Title"
            android:textAppearance="@style/text_14.regular.primary"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:ellipsize="end"
            android:lines="4"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="#424242" />

        <LinearLayout
            android:id="@+id/aab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            >

            <TextView
                android:id="@+id/story_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="3 likes"
                android:textAppearance="@style/text_12.regular.secondary" />

            <TextView
                android:id="@+id/story_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"

                android:text="1 comments"
                android:textAppearance="@style/text_12.regular.secondary" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_delete_draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Remove Draft"


            android:textAppearance="@style/text_12.regular.secondary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/profile_tab_item_image_height"
        android:layout_height="@dimen/profile_tab_item_image_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="#24bdbdbd" />


</RelativeLayout>