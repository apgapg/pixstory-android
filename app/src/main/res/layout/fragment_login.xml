<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".ui.loginscreen.LoginActivity">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <include
            layout="@layout/vertical_divider_light"
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            android:layout_gravity="center_vertical"

            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Or"
            android:textColor="#bdbdbd"

            android:textSize="12dp" />

        <include
            layout="@layout/vertical_divider_light"
            android:layout_width="0dp"
            android:layout_height="0.7dp"

            android:layout_gravity="center_vertical"
            android:layout_weight="1" />


    </LinearLayout>

    <EditText
        android:id="@+id/username_field"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_baseline_email_24px"
        android:drawablePadding="4dp"
        android:drawableTint="@color/divider"
        android:hint="@string/email_username"
        android:inputType="textEmailAddress"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_baseline_lock_24px"
        android:drawablePadding="4dp"
        android:drawableTint="@color/divider"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button_login"
        style="@style/smallCaseButton"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"

        android:background="@drawable/button_border_color_primary_text"
        android:text="@string/login"
        android:textAppearance="@style/text_14.regular.primary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"

        android:text="@string/forgotPassword"
        android:textAppearance="@style/text_14.medium.secondary" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/signUp"
        android:textAppearance="@style/text_12.regular.secondary" />

    <TextView
        android:id="@+id/terms_and_conditons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="@string/termsConditions"
        android:textAlignment="center"
        android:textSize="10sp" />


</LinearLayout>
