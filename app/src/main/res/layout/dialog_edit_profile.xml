<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="#fff"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.72"
            android:padding="9dp"
            android:scaleType="centerCrop"
            android:tint="@color/secondary_text"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Edit Profile"
            android:textAllCaps="true"
            android:textAppearance="@style/text_14.medium.secondary"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/text_update_profile"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:alpha="0.72"
            android:padding="11dp"
            android:scaleType="centerCrop"
            android:tint="@color/secondary_text"
            app:srcCompat="@drawable/ic_done" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jullae.ui.custom.CircularImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/default_pic" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/image"
            android:padding="4dp"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_outline_camera_alt_24px" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="bottom"
        android:paddingLeft="12dp"
        android:text="Name"
        android:textColor="#9e9e9e"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/field_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#fff"
        android:hint="enter your name..."
        android:lines="1"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:textColor="#212121"
        android:textSize="14dp" />

    <include layout="@layout/vertical_divider_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="bottom"
        android:paddingLeft="12dp"
        android:text="Bio"
        android:textColor="#9e9e9e"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/field_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#fff"
        android:maxLength="150"
        android:gravity="top"
        android:hint="describe about yourself..."
        android:lines="2"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:textColor="#212121"
        android:textSize="14dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/close_button" />

</LinearLayout>
