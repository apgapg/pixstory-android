<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"

            android:paddingRight="4dp">

            <TextView
                android:id="@+id/story_title"
                style="@style/textView.feed_primary_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Title" />

            <TextView
                style="@style/textView.feed_secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:text="by" />


            <TextView
                android:id="@+id/writer_name"
                style="@style/textView.feed_primary_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Username" />

            <TextView
                style="@style/textView.feed_secondary_text"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:text="1 day ago" />


        </LinearLayout>

        <TextView
            android:id="@+id/story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/story_like_count"
                style="@style/textView.feed_secondary_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="3 likes" />

            <TextView
                android:id="@+id/story_comment_count"
                style="@style/textView.feed_secondary_text2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="1 comments" />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="#24bdbdbd" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />

</RelativeLayout>