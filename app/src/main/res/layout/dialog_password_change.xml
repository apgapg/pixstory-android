<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="bottom"
        android:paddingLeft="12dp"
        android:text="Old Password"
        android:textAppearance="@style/text_14.medium.primary" />

    <EditText
        android:id="@+id/field_old_password"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#fff"
        android:hint="..."

        android:inputType="textPassword"
        android:lines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:textAppearance="@style/text_14.regular.primary" />

    <include layout="@layout/vertical_divider_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="bottom"
        android:paddingLeft="12dp"
        android:text="New Password"
        android:textAppearance="@style/text_14.medium.primary" />

    <EditText
        android:id="@+id/field_new_password"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#fff"
        android:hint="..."
        android:inputType="textPassword"
        android:lines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:textAppearance="@style/text_14.regular.primary" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <include layout="@layout/vertical_divider_light" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="42.6dp"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:gravity="center"
                android:text="SUBMIT"
                android:textAppearance="@style/text_14.medium.secondary" />

            <include layout="@layout/vertical_divider_light" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            tools:visibility="visible" />
    </RelativeLayout>
</LinearLayout>