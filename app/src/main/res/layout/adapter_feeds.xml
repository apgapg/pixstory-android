<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/padding12TopBottom"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_shadow"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/padding16LeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivUserPic"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    app:srcCompat="@drawable/user_icon" />

                <LinearLayout
                    android:id="@+id/titleLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/iconTextMargin"
                    android:layout_toLeftOf="@+id/timeLyt"
                    android:layout_toRightOf="@+id/ivUserPic"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUserName"
                        style="@style/txt_14_regular_primaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ankit sharma" />

                    <TextView
                        android:id="@+id/tvLocation"
                        style="@style/txt_10_light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Men from Clouds" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeLyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/iconTextMargin"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tvTimeInDays"
                        style="@style/txt_12_light_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2 days ago" />

                    <ImageView
                        android:id="@+id/ivMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/iconTextMargin"
                        android:background="@drawable/ripple_effect"
                        app:srcCompat="@drawable/more_vert" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivStoryPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_200"
            android:minHeight="@dimen/dimens_200"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_favorite" />

        <LinearLayout
            style="@style/margin16LeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/border_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                style="@style/padding8TopBottom"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:srcCompat="@drawable/favorite_outline" />

                <TextView
                    android:id="@+id/tvLikes"
                    style="@style/txt_14_regular_primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/headingSubHeadingMargin"
                    android:gravity="center_vertical"
                    tools:text="12 likes" />
            </LinearLayout>

            <LinearLayout
                style="@style/padding8TopBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:gravity="center_vertical|end">

                <ImageView
                    android:id="@+id/ivEditStory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shape" />
                <TextView
                    android:id="@+id/tvComments"
                    style="@style/txt_14_regular_primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/headingSubHeadingMargin"
                    tools:text="30 Stories" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvStories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>