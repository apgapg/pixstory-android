<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivUserPic"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_50"
                android:layout_marginEnd="@dimen/margin_small"
                android:contentDescription="@null"
                app:srcCompat="@drawable/user_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    style="@style/textViewStyle.line_1"
                    tools:text="Ankit sharma" />

                <TextView
                    android:id="@+id/tvLocation"
                    style="@style/textViewStyle"
                    android:textColor="@color/grey_light7"
                    android:textSize="@dimen/text_size_tiny_small"
                    tools:text="Men from Clouds" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tvTimeInDays"
                style="@style/textViewStyle.line_1"
                android:layout_marginEnd="@dimen/margin_tiny"
                android:textColor="@color/grey_light7"
                android:textSize="@dimen/text_size_small"
                tools:text="2 days ago" />

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="@dimen/height_20"
                android:layout_height="@dimen/height_20"
                android:background="@drawable/ripple_effect"
                android:contentDescription="@null"
                app:srcCompat="@drawable/more_vert" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivStoryPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_200"
        android:contentDescription="@null"
        android:minHeight="@dimen/dimens_200"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_favorite" />

