<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="#24bdbdbd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#757575" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/pic_title"
            style="@style/textView.feed_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title" />

        <TextView
            android:id="@+id/pic_text_by"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="by" />

        <com.jullae.ui.custom.CircularImageView
            android:id="@+id/user_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="#99bdbdbd" />

        <TextView
            android:id="@+id/text_name"
            style="@style/textView.feed_primary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Username" />

        <TextView
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:text="1 day ago" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/pic_like_count"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:text="3 likes" />

        <TextView
            android:id="@+id/pic_comment_count"
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1 stories" />


        <TextView
            android:id="@+id/write_story"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:paddingRight="12dp"
            android:text="Write a story"
            android:textColor="#424242"
            android:textStyle="bold" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#757575" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/story_title"
            style="@style/textView.feed_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="Title" />

        <TextView
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:text="by" />

        <com.jullae.ui.custom.CircularImageView
            android:id="@+id/writer_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"

            android:src="#99bdbdbd" />

        <TextView
            android:id="@+id/writer_name"
            style="@style/textView.feed_primary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Username" />

        <TextView
            style="@style/textView.feed_secondary_text"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:text="1 day ago" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </LinearLayout>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/story_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        app:colorClickableText="#424242"
        app:trimLines="3"
        app:trimMode="trimModeLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/like_count"
            style="@style/textView.feed_secondary_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="3 likes" />

        <TextView
            android:id="@+id/story_comment_count"
            style="@style/textView.feed_secondary_text2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="1 stories" />


    </LinearLayout>

    <TextView
        android:id="@+id/view_more_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:text="view all 5 stories"
        android:textColor="#9e9e9e" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/divider" />

</LinearLayout>