<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="#24bdbdbd" />

    <include layout="@layout/vertical_divider_light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/pic_title"
            style="@style/textView.feed_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title" />

        <TextView
            android:id="@+id/pic_text_by"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:text="by"

            android:textAppearance="@style/text_14.light.secondary" />

        <com.jullae.ui.custom.CircularImageView
            android:id="@+id/user_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="#99bdbdbd" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Username"

            android:textAppearance="@style/text_14.medium.primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:text="1 day ago"
            android:textAppearance="@style/text_14.light.secondary" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pic_like_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:text="3 likes"
            android:textAppearance="@style/text_14.light.secondary" />

        <TextView
            android:id="@+id/pic_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="1 stories"
            android:textAppearance="@style/text_14.light.secondary" />


        <TextView
            android:id="@+id/write_story"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:paddingRight="12dp"
            android:text="Write a story"
            android:textAppearance="@style/text_14.medium.primary" />


    </LinearLayout>

    <include layout="@layout/vertical_divider_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"

        android:background="@drawable/shape_round_rectangle_grey"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"

                android:paddingRight="4dp"
                android:text="Title"

                android:textAppearance="@style/text_12.medium.primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:text="by"
                android:textAppearance="@style/text_12.light.secondary"

                />

            <com.jullae.ui.custom.CircularImageView
                android:id="@+id/writer_photo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"

                android:src="#99bdbdbd" />

            <TextView
                android:id="@+id/writer_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="Username"

                android:textAppearance="@style/text_12.medium.primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"

                android:text="1 day ago"
                android:textAppearance="@style/text_12.light.secondary" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />

        </LinearLayout>

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@style/text_12.regular.secondary"

            app:trimLines="3"
            app:trimMode="trimModeLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/story_like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:text="3 likes"
                android:textAppearance="@style/text_12.light.secondary" />

            <TextView
                android:id="@+id/story_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="1 stories"

                android:textAppearance="@style/text_12.light.secondary" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_view_more_story"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="view all 5 stories"
            android:textAppearance="@style/text_12.regular.primary" />

    </LinearLayout>

</LinearLayout>