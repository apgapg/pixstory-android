<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="profileModel"
            type="com.jullae.data.db.model.ProfileModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp">

                            <com.jullae.ui.custom.CircularImageView
                                android:id="@+id/image_avatar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/circle_dash_border"
                                android:padding="4dp"

                                android:src="#bdbdbd" />

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="20dp"
                                android:visibility="invisible" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="48dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@{profileModel.name}"
                                android:textColor="#212121"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_penname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{profileModel.penname}"
                                android:textAppearance="@style/text_14.light.secondary" />

                            <TextView
                                android:id="@+id/user_bio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="8dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="3"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="@{profileModel.bio}"
                                android:textAppearance="@style/text_12.regular.primary" />


                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/button_message"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="36dp"

                        android:layout_marginRight="40dp"
                        android:background="@drawable/circle_border"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        android:tint="@color/icon_color"
                        app:srcCompat="@drawable/ic_envelope" />

                    <ImageView
                        android:id="@+id/button_edit_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="36dp"
                        android:background="@drawable/circle_border"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        android:tint="@color/icon_color"
                        app:srcCompat="@drawable/ic_edit_black_24dp" />

                    <ImageView
                        android:id="@+id/ivMore"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/ripple_effect"
                        android:padding="6dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_more_vert_black_24dp" />
                </FrameLayout>

                <include layout="@layout/vertical_divider_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_followers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"

                            android:gravity="center"
                            android:maxLines="3"

                            android:text="@{profileModel.follower_count}"
                            android:textColor="#424242"
                            android:textSize="@dimen/profile_count_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="Followers"
                            android:textColor="#757575"

                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_following"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="@{profileModel.following_count}"
                            android:textColor="#424242"
                            android:textSize="@dimen/profile_count_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="Following"
                            android:textColor="#757575"

                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_stories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="@{profileModel.stories_count}"
                            android:textColor="#424242"
                            android:textSize="@dimen/profile_count_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="Stories"
                            android:textColor="#757575"

                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_pictures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="@{profileModel.pictures_count}"
                            android:textColor="#424242"
                            android:textSize="@dimen/profile_count_text"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="3"

                            android:text="Pictures"
                            android:textColor="#757575"

                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/vertical_divider_light" />
            </LinearLayout>


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </android.support.design.widget.AppBarLayout>

        <include
            layout="@layout/vertical_divider_light"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>
</layout>