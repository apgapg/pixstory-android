<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="We would be sending you the reset link to your mail"
        android:textAppearance="@style/text_14.regular.secondary" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_baseline_email_24px"


        android:drawablePadding="4dp"
        android:drawableTint="@color/divider"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textSize="14dp"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/text_confirm"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_border_color_primary_text"
        android:gravity="center"

        android:text="CONFIRM"
        android:textAppearance="@style/text_14.regular.primary" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/forgotPassword"
        android:textColor="#757575"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"

        android:text=""

        android:textStyle="bold" />

    <TextView
        android:id="@+id/terms_and_conditons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="@string/termsConditions"
        android:textAlignment="center"
        android:textSize="10sp" />


</LinearLayout>
