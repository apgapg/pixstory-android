<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="44dp"
        android:text="FORGOT PASSWORD?"
        android:textAppearance="@style/text_14.medium"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"

        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="Enter your email below and we will send you the password reset instructions."
        android:textAppearance="@style/text_14.regular.secondary" />



    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:hint="@string/email_username"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:textSize="14dp" />


    <Button
        android:id="@+id/text_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@color/blue"

        android:text="CONFIRM"
        android:textAllCaps="true"
        android:textAppearance="@style/text_14.regular.primary"
        android:textColor="#fff"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Login here"
            android:textAppearance="@style/text_14.medium.secondary"
            android:textColor="#fff" />



    </LinearLayout>



</LinearLayout>
