<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_round_dialog"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="Choose Image From: "
        android:textAppearance="@style/text_14.medium.primary" />

    <include layout="@layout/vertical_divider" />


    <TextView
        android:id="@+id/text_open_camera"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Open Camera"
        android:textAppearance="@style/text_14.regular.primary" />

    <include layout="@layout/vertical_divider" />


    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Gallery"
        android:textAppearance="@style/text_14.regular.primary" />

    <include layout="@layout/vertical_divider" />

    <TextView
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="CLOSE"
        android:textAppearance="@style/text_12.regular.secondary" />

</LinearLayout>