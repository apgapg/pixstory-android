<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_extra_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        tools:visibility="visible">


        <TextView
            android:id="@+id/edit_story"

            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:background="?attr/selectableItemBackground"

            android:gravity="center"
            android:text="Edit Story"
            android:textAllCaps="true"
            android:textAppearance="@style/text_14.regular.primary"

            tools:visibility="visible" />


        <TextView
            android:id="@+id/delete_story"

            android:layout_width="match_parent"

            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"

            android:gravity="center"

            android:text="Delete Story"
            android:textAllCaps="true"
            android:textAppearance="@style/text_14.regular.primary"

            tools:visibility="visible" />
    </LinearLayout>


    <TextView
        android:id="@+id/report_story"
        android:layout_width="match_parent"

        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"

        android:gravity="center"

        android:text="Report Story"
        android:textAllCaps="true"
        android:textAppearance="@style/text_14.regular.primary"

        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_save_story"
        android:layout_width="match_parent"

        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"

        android:gravity="center"

        android:text="Save Story"
        android:textAllCaps="true"
        android:textAppearance="@style/text_14.regular.primary"

        tools:visibility="visible" />

    <TextView
        android:layout_width="match_parent"

        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"

        android:gravity="center"

        android:text="Share Story on Facebook"
        android:textAllCaps="true"
        android:textAppearance="@style/text_14.regular.primary"

        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"

        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"

        android:gravity="center"

        android:text="CLOSE"
        android:textAllCaps="true"
        android:textAppearance="@style/text_14.regular.primary"

        tools:visibility="visible" />
</LinearLayout>